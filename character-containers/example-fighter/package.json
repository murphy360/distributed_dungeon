{
  "name": "example-fighter-character",
  "version": "1.0.0",
  "description": "Example Fighter character for Distributed Dungeon RPG",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t example-fighter .",
    "docker:build:dev": "docker build -t example-fighter:dev --target development .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f character-container",
    "docker:shell": "docker-compose exec character-container sh",
    "health": "curl http://localhost:3001/health || echo 'Health check failed'"
  },
  "keywords": [
    "rpg",
    "character",
    "fighter",
    "dnd",
    "microservice",
    "ai",
    "distributed"
  ],
  "author": "Distributed Dungeon Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io-client": "^4.7.2",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}