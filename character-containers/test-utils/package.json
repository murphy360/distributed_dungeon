{
  "name": "character-container-tests",
  "version": "1.0.0",
  "description": "Test utilities for distributed character containers",
  "main": "integration-test.js",
  "scripts": {
    "test": "echo 'Run specific test files'",
    "test:manual": "bash manual-test.sh",
    "test:manual:win": "powershell -ExecutionPolicy Bypass -File manual-test.ps1",
    "test:integration": "node integration-test.js",
    "test:deploy": "bash deploy-test-party.sh",
    "test:deploy:win": "powershell -ExecutionPolicy Bypass -File deploy-test-party.ps1",
    "test:cleanup": "bash deploy-test-party.sh --cleanup",
    "test:cleanup:win": "powershell -ExecutionPolicy Bypass -File deploy-test-party.ps1 -Cleanup",
    "test:all": "npm run test:deploy && sleep 10 && npm run test:integration",
    "test:all:win": "npm run test:deploy:win && timeout /t 10 && npm run test:integration"
  },
  "keywords": [
    "rpg",
    "character",
    "testing",
    "docker",
    "microservice"
  ],
  "author": "Distributed Dungeon Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "jest": "^29.6.4"
  }
}