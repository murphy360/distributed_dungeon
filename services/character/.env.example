# Character Container Environment Configuration
# Copy this file to .env and customize for your character

# Character Information
CHARACTER_ID=char-001
CHARACTER_NAME=example-fighter
CHARACTER_CLASS=fighter
CHARACTER_LEVEL=1

# Character Port (each character needs a unique port)
CHARACTER_PORT=3000

# AI Personality Configuration (0.0 to 1.0)
AI_AGGRESSIVENESS=0.6  # How likely to engage in combat
AI_CAUTION=0.4         # How careful in dangerous situations
AI_CURIOSITY=0.7       # How likely to explore new areas
AI_TACTICAL=0.5        # How strategically character thinks

# Game System Connection
REGISTRY_URL=http://host.docker.internal:3001
GAME_SERVER_URL=http://host.docker.internal:3000
REDIS_URL=redis://host.docker.internal:6379

# Optional: Character-specific Redis
CHARACTER_REDIS_PORT=6380
REDIS_PASSWORD=redispass123

# Development Settings
NODE_ENV=production
LOG_LEVEL=info
BUILD_TARGET=production

# For development with hot reload, set:
# BUILD_TARGET=development
# VOLUME_MOUNT_TYPE=rw